<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<!-- Maven 설정 파일인 pom.xml의 버전 -->
	<modelVersion>4.0.0</modelVersion>
	<!-- 프로젝트를 개발하는 회사의 도메인 -->
	<groupId>com.mycompany</groupId>
	<!-- 프로젝트의 식별 이름 ( 애플리케이션을 구분하는 이름 ) -->
	<artifactId>SpringWebProgramming</artifactId>
	<!-- 프로젝트의 버전 -->
	<version>1.0</version>
	<!-- 프로젝트의 최종 산출물의 형태 -->
	<packaging>war</packaging>
	<!-- 프로젝트의 이름 ( 사용자가 부르는 이름 - 중복 가능, 보통 생략함 ) -->
	<name>SpringWebProgramming</name>
	<!-- 프로젝트의 설명 -->
	<description>스프링 학습용 프로젝트</description>

	<!-- 의존성 라이브러리 설정 -->
	<!-- 필요한 만큼 의존성 설정 가능 -->
	<!-- 의존성 라이브러리도 아래와 같은 내요이 있음 -->
	<!-- 어디서 정보를 얻을까? spring 사이트에 Quick Start 를 보자 -->
	<!-- http://search.maven.org/ 거의 여기서 찾음 -->
	<dependencies>
		<!-- 서블릿 라이브러리 설정 -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<version>3.1.0</version>
		</dependency>
		<!-- JSP API 설정 -->
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>javax.servlet.jsp-api</artifactId>
			<version>2.3.1</version>
		</dependency>
		<!-- 스프링 WEBMVC 라이브러리 설정 -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
			<version>4.3.8.RELEASE</version>
		</dependency>
		<!-- 파일 업로드를 위한 commons 라이브러리 설정 -->
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.3.2</version>
		</dependency>
		<!-- JSTL 라이브러리 설정 -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
			<version>1.2</version>
		</dependency>

		<!-- 로깅을 위한 SLF4J와 LOG4J 2버전을 위한 라이브러리 설정 -->
		<!-- SLF4J 인터페이스 -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.25</version>
		</dependency>
		<!-- SLF4J 인터페이스 구현 클래스 라이브러리 / 다른 구현 클래스 쓸때 이것 바꾸기 -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-slf4j-impl</artifactId>
			<version>2.8.2</version>
		</dependency>
		<!-- LOG4J 라이브러리 -->
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>2.8.2</version>
		</dependency>

		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.8.2</version>
		</dependency>

	</dependencies>

	<!-- 프로젝트를 빌드할 때 사용할 정보 설정, 수정할 필요가 없는 부분(자바 버전 제외) -->
	<build>
		<sourceDirectory>src</sourceDirectory>
		<!-- 프로젝트를 빌드할 때 사용하는 툴s -->
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
				<configuration>
					<!-- 자바 버전 -->
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.0.0</version>
				<!-- 어떤 내용을 압축할 것인지 -->
				<configuration>
					<warSourceDirectory>WebContent</warSourceDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>