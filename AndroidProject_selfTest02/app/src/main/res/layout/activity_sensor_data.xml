<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.myapplication.activity.SensorDataActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txtSensorName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SensorName" />

        <TextView
            android:id="@+id/txtSensorAccuracy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="txtSensorAccuracy" />

        <TextView
            android:id="@+id/txtAccelX"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="txtAccelX" />

        <TextView
            android:id="@+id/txtAccelY"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="txtAccelY" />

        <TextView
            android:id="@+id/txtAccelZ"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="txtAccelZ" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
